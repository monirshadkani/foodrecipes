{% extends "base.html.twig" %}

{% block title %}Home
{% endblock %}

{% block body %}
    <div class="container mx-auto text-center mt-20 px-6">
        <h1 class="text-6xl font-extrabold text-white tracking-wide leading-tight text-yellow-800">
            Welcome to the <span class="text-yellow-400">Foodiepedia</span>
        </h1>
        <p class="text-xl text-gray-500 mt-6 max-w-2xl mx-auto">
            ✨ Find and create recipes, it's time to cultivate your culinary magic! ✨
        </p>

        <div class="mt-12">
            {% if app.user %}
                <h2 class="text-4xl text-yellow-600">Hello, <span class="text-yellow-400">{{ app.user.username }}!</span></h2>
                <div class="mt-8 flex justify-center space-x-6">
                    <a href="{{ path('recipe_new') }}" class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-full shadow-lg hover:from-blue-500 hover:to-purple-500 transition-all transform hover:scale-105">
                        Create Recipe
                    </a>
                    <a href="{{ path('ingredient_index') }}" class="bg-gradient-to-r from-green-600 to-teal-500 text-white px-6 py-3 rounded-full shadow-lg hover:from-green-500 hover:to-teal-400 transition-all transform hover:scale-105">
                        Manage Ingredients
                    </a>
                    <a href="{{ path('app_logout') }}" class="bg-gradient-to-r from-red-600 to-orange-600 text-white px-6 py-3 rounded-full shadow-lg hover:from-red-500 hover:to-orange-500 transition-all transform hover:scale-105">
                        Log Out
                    </a>
                </div>
            {% else %}
                <div class="mt-8 flex justify-center space-x-6">
                    <a href="{{ path('app_login') }}" class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-full shadow-lg hover:from-blue-500 hover:to-purple-500 transition-all transform hover:scale-105">
                        Log In
                    </a>
                    <a href="{{ path('app_register') }}" class="bg-gradient-to-r from-green-600 to-teal-500 text-white px-6 py-3 rounded-full shadow-lg hover:from-green-500 hover:to-teal-400 transition-all transform hover:scale-105">
                        Sign Up
                    </a>
                </div>
            {% endif %}
			
							<form action="{{ path('recipe_search') }}" method="get">
								<div class="space-y-4">
									{% for ingredient in ingredients %}
										<div class="flex items-center">
											<input type="checkbox" name="ingredients[]" value="{{ ingredient.id }}" id="ingredient_{{ ingredient.id }}" class="mr-2">
											<label for="ingredient_{{ ingredient.id }}" class="text-lg text-gray-200">{{ ingredient.label }}</label>
										</div>
									{% endfor %}
								</div>

								<button type="submit" class="mt-6 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-500 transition">Search</button>
							</form>

        </div>
    </div>
{% endblock %}
